@model InsuranceCustomer

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2>
                Delete Customer
            </h2>
        </div>
    </div>
    <div>
        <form method="post">

            <div>                
                <div class="pb-3">
                    <label asp-for="FirstName" class="p-0"></label>
                    <input asp-for="FirstName" disabled class="form-control" />
                </div>
                <div class="pb-3">
                    <label asp-for="LastName" class="p-0"></label>
                    <input asp-for="LastName" disabled class="form-control" />
                </div>
                <div class="pb-3">
                    <label asp-for="Email" class="p-0"></label>
                    <input asp-for="Email" disabled class="form-control" />
                </div>
                <div class="row pb-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <!-- Let's go back to the previous page -->
                        <a asp-controller="InsuranceCustomer" asp-action="Index" class="btn btn-outline-secondary form-control border">Back To List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
