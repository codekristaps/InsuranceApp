@model List<InsuranceCustomer>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2>
                Insurance Customers
            </h2>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Two Factor Enabled</th>
                <th>Roles</th> <!-- New column for roles -->
                <th></th>
                <!-- Add more columns as needed -->
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.FirstName</td>
                    <td>@customer.LastName</td>
                    <td>@customer.Email</td>
                    <td>@customer.TwoFactorEnabled</td>
                    <td>
                        @foreach (var role in customer.Roles)
                        {
                            <div>@role</div>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@customer.Id" class="btn editButton">Edit</a>
                        <a asp-action="Delete" asp-route-id="@customer.Id" class="btn btn-danger">Delete</a>
                    </td>
                    <!-- Add more columns as needed -->
                </tr>
            }
        </tbody>
    </table>
</div>