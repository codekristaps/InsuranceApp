@model InsuranceProduct

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2>
                Edit Insurance Product
            </h2>
        </div>
    </div>
    <div>
        <form method="post">
            <input type="hidden" asp-for="InsuranceProductId" /> <!-- Hidden field for Id -->
            <div class="pb-3">
                <label asp-for="Name" class="p-0"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="pb-3">
                <label asp-for="Description" class="p-0"></label>
                <input asp-for="Description" class="form-control" />
            </div>
            <div class="pb-3">
                <label asp-for="Price" class="p-0"></label>
                <input asp-for="Price" class="form-control" />
            </div>
            <div class="pb-3">
                <label asp-for="Discount" class="p-0"></label>
                <input asp-for="Discount" class="form-control" />
            </div>
            <div class="pb-3">
                <label asp-for="ImageUrl" class="p-0"></label>
                <input asp-for="ImageUrl" class="form-control" />
            </div>
            <div class="row pb-3">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-danger form-control">Save</button>
                </div>
                <div class="col-6 col-md-3">
                    <!-- Let's go back to the previous page -->
                    <a asp-controller="InsuranceProduct" asp-action="Index" class="btn btn-outline-secondary form-control border">Back To List</a>
                </div>
            </div>
        </form>
    </div>
</div>