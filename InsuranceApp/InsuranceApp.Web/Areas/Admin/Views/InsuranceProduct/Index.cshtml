@model List<InsuranceProduct>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2>
                Insurance Products
            </h2>
        </div>
    </div>
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New Insurance Product</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Insurance Type</th>
                <th>Price</th>
                <th>Discount</th>
                <th>Product Count</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Insurance.Name</td>
                    <td>@item.Price</td>
                    <td>@item.Discount</td>
                    <td>@item.Products.Count</td>
                    <td class="text-end">
                        <!-- Add the class "text-end" here -->
                        <a asp-action="Edit" asp-route-id="@item.InsuranceProductId" class="btn editButton">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.InsuranceProductId" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>