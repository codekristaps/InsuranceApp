@model List<Product>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2>
                Products
            </h2>
        </div>
    </div>
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New Product</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>Insurance Product Name</th>
                <th>Customer ID</th>
                <th>Purchase Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.InsuranceProduct.Name</td>
                    <td>@item.Customer?.Id</td>
                    <td>@item.PurchaseDate?.ToString("d")</td>
                    <td class="text-end">
                        <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn editButton">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>